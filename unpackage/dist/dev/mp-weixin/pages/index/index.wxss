.index_page {
  width: 750rpx;
  height: 100vh;
  background-color: #F5F8FE;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow-y: scroll;
  position: relative;
}
.index_page .index_nav {
  position: absolute;
  width: 750rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.index_page .index_nav view {
  font-size: 48rpx;
  color: #1A1A1A;
  line-height: 32rpx;
  margin: 28rpx 0 28rpx 32rpx;
}
.index_page .banner {
  /* banner 4 */
  position: absolute;
  left: 32rpx;
  top: 188rpx;
  width: 688rpx;
  height: 328rpx;
  border-radius: 16rpx;
  opacity: 1;
  align-self: stretch;
  background: #1DC36A;
  display: flex;
  align-items: center;
}
.index_page .banner .banner_text {
  color: #FFFFFF;
  font-size: 24rpx;
  margin-left: 24rpx;
  width: 280rpx;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid;
  border-radius: 48rpx;
  border-image: linear-gradient(180deg, #25C56F 0%, #24C46E 100%) 1;
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
}
.index_page .title {
  /* 快捷操作 */
  position: absolute;
  left: 46rpx;
  top: 570rpx;
  width: 120rpx;
  height: 46rpx;
  opacity: 1;
  font-family: Source Han Sans CN;
  font-size: 30rpx;
  font-weight: 500;
  line-height: normal;
  display: flex;
  align-items: flex-end;
  letter-spacing: 0em;
  /* 文本/正文 */
  color: #1A1A1A;
}
.index_page .btn {
  position: absolute;
  left: 32rpx;
  top: 652rpx;
  width: 688rpx;
  height: 146rpx;
  opacity: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 0rpx;
  align-items: center;
}
.index_page .btn .nav_btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.index_page .btn .nav_btn .iconfont {
  color: #1afa29;
  font-size: 108rpx;
}
