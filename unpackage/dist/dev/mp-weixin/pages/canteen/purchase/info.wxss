.write_info_page {
  width: 750rpx;
  height: 100vh;
  background-color: #f5f8fe;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  overflow-y: scroll;
}
.write_info_page .write_info_nav {
  position: absolute;
  width: 750rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.write_info_page .write_info_nav image {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  left: 24rpx;
}
.write_info_page .write_info_nav ._span {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  line-height: 32rpx;
}
.write_info_page .write_info_content {
  margin-top: 155rpx;
  padding-bottom: 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 702rpx;
}
.write_info_page .write_info_content .personForm {
  border-radius: 30rpx;
  background-color: #ffffff;
  width: 100%;
  box-shadow: 0px -2px 27px 0px rgba(208, 208, 208, 0.25);
}
.write_info_page .write_info_content .personForm .formItem {
  padding: 30rpx 0rpx;
  border-bottom: 1rpx solid #f2f2f2;
  margin: 0rpx 25rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.write_info_page .write_info_content .personForm .formItem:last-child {
  border-bottom: 0rpx;
}
.write_info_page .write_info_content .personForm .formItem .label {
  min-width: 150rpx;
  display: inline-block;
  font-weight: 500;
  font-size: 32rpx;
  color: #333333;
}
.write_info_page .write_info_content .personForm .formItem .input {
  font-size: 32rpx;
  border: 1px solid #e5e5e5;
  border-radius: 4px;
  padding: 0 5px;
  padding-left: 10px;
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  flex: 1;
  height: 80rpx;
}
.write_info_page .write_info_content .personForm .formItem .select {
  width: 100%;
  border: 0;
}
.write_info_page .write_info_content .personForm .formItem .select .uni-select {
  font-size: 32rpx;
}
.write_info_page .write_info_content .personForm .formItem .uni-date-editor .uniui-calendar:before {
  content: "";
}
.write_info_page .write_info_content .personForm .formItem .uni-date-editor .uni-date__x-input {
  padding-left: 20rpx;
  font-size: 32rpx !important;
}
.write_info_page .write_info_content .personForm .formItem .textare {
  border: 1px solid #e5e5e5;
  font-size: 32rpx;
  padding: 5px;
  height: 200rpx;
}
.write_info_page .write_info_content .personForm .formItem .input[type="textare"] {
  height: 200rpx;
}
.write_info_page .write_info_content .write_info_content_button {
  width: 620rpx;
  height: 84rpx;
  background: #fe5ba4;
  border-radius: 42rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}
.write_info_page .write_info_content .write_info_content_button ._span {
  font-size: 32rpx;
  font-weight: 400;
  color: #ffffff;
  line-height: 32rpx;
}

